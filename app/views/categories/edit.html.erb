<h1 class="text-3xl font-semibold text-center mb-6">Edit Category</h1>

<%= form_with model: @category, local: true, class: "space-y-4 max-w-lg mx-auto" do |form| %>
  <div>
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Update Category", class: "w-full py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300" %>
  </div>
<% end %>
