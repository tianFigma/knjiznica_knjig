<h1 class="text-3xl font-bold mb-4"><%= @book.title %></h1>
<p class="text-lg text-gray-700 mb-2">Author: <%= @book.author %></p>

<h3 class="text-2xl font-semibold mb-4">Categories:</h3>
<ul class="space-y-2">
  <% @book.categories.each do |category| %>
    <li class="bg-white p-4 rounded shadow hover:shadow-lg transition-shadow duration-300">
      <%= category.name %>
    </li>
  <% end %>
</ul>
