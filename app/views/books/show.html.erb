<h1 class="text-3xl font-bold mb-4"><%= @book.title %></h1>
<p class="text-lg text-gray-700 mb-2">Author: <%= @book.author %></p>

<h3 class="text-2xl font-semibold mb-4">Categories:</h3>
<ul class="space-y-2">
  <% @book.categories.each do |category| %>
    <li class="bg-white p-4 rounded shadow hover:shadow-lg transition-shadow duration-300">
      <%= category.name %>
    </li>
  <% end %>
</ul>

<h3 class="text-2xl font-semibold mb-4">Book Image:</h3>
<% if @book.image.attached? %>
  <%= image_tag @book.image, alt: "Book Image", class: "w-full h-auto" %>
<% else %>
  <p>No image uploaded</p>
<% end %>

<div class="flex space-x-4 mt-4">
  <%= link_to "Edit", edit_book_path(@book), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
  
  <%= button_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" %>
</div>
